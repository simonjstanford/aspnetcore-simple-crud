@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Type</th>
        <th>Price</th>
        <th>Detail</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var p in Model) {
        <tr>
            <td>@p.ID</td>
            <td>@p.Name</td>
            <td>@p.Type.Name</td>
            <td>@p.Price</td>
            <td>@Html.ActionLink("Details", "ShowDetail", new { id = p.ID })</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = p.ID })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = p.ID })</td>
        </tr>
	}    
</table>

@Html.ActionLink("Create a new product", "Create")